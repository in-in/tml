block var
    include var

doctype html

html(lang="en")
    head
        title
            block title
                | #{pageTitle}
        block meta
            meta(charset="utf-8")
            meta(http-equiv="X-UA-Compatible" content="IE=edge")
            meta(name="viewport" content="width=device-width, initial-scale=1.0")
            meta(name="description" content="Desctiption of #{thisPage.toLowerCase()} page")
        block link
            link(href='http://fonts.googleapis.com/css?family=Roboto+Condensed:300,700&subset=latin,cyrillic-ext', rel='stylesheet')


            link(rel="icon" type="image/png" href="favicon.png")
            link(rel="stylesheet" href="css/style.css")

    body
        block header
            // HEADER
            include header
            // HEADER ends
        block menu
            // MENU
            include menu
            // MENU ends
        block slider
            // SLIDER
            include slider
            // SLIDER ends
        block main
            // MAIN
            include main
            // MAIN ends
        block footer
            // FOOTER
            include footer
            // FOOTER ends
        block script
            //script
            if siteScript
                script(src="js/main.js")
            //script ends